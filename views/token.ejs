<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Token Table UI</title>
</head>
<style>
    table {
        border-collapse: collapse;
    }

    tr {
        border-bottom: dashed #c8c8cb;
    }

    th {
        background: #cbf266;
        padding: 0 1em;
    }

    td {
        text-align: center;
        padding: 0.5em;
    }
</style>

<body>
    <h1>ðŸŽ«Token Index UI&nbsp;<span style="font-size: 0.5em;"><a href="./token">ðŸ”„Refresh</a></span></h1>
    <hr>
    <table>
        <tr>
            <th>recordID</th>
            <th>Token</th>
            <th>isUsed</th>
            <th>createdAt</th>
            <th>updatedAt</th>
        </tr>
        <% tokens.forEach(function(value) { %>
            <tr>
                <td>
                    <%= value.id %>
                </td>
                <td>
                    <%= value.token.toString('hex') %>
                </td>
                <td>
                    <%= value.isUsed %>
                </td>
                <td>
                    <%= value.createdAt %>
                </td>
                <td>
                    <%= value.updatedAt %>
                </td>
            </tr>
            <% }); %>
    </table>
</body>

</html>